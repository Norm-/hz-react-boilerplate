{
  "name": "hz-react-boilerplate",
  "version": "0.0.5",
  "description": "a combination of; horizon, react, react-hz, webpack",
  "main": "./src/index.js",
  "scripts": {
    "start": "npm run build && npm run hz",
    "dev": "NODE_ENV=development concurrently -kr 'webpack-dashboard -- node devServer.js' 'horizon serve --dev --bind all -p 7001'",
    "dev:plain": "NODE_ENV=development concurrently -kr 'node devServer.js' 'horizon serve --dev --bind all -p 7001'",
    "devServer": "NODE_ENV=development webpack-dashboard -- node devServer.js",
    "build": "NODE_ENV=production webpack --progress --colors",
    "watch": "NODE_ENV=development webpack --progress --colors --watch",
    "hz": "horizon serve --dev --bind all -p 7001"
  },
  "keywords": [
    "horizon",
    "react-hz",
    "rethinkdb"
  ],
  "author": "Doruk Kutlu",
  "license": "MIT",
  "dependencies": {
    "horizon": "^2.0.0",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-hz": "^0.3.2",
    "rupture": "^0.6.1",
    "stylus": "^0.54.5",
    "verge": "^1.9.1"
  },
  "devDependencies": {
    "autoprefixer": "^6.4.1",
    "babel-core": "^6.14.0",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "browser-sync": "^2.16.0",
    "browser-sync-webpack-plugin": "^1.1.2",
    "chalk": "^1.1.3",
    "concurrently": "^2.2.0",
    "css-loader": "^0.25.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "lost": "^7.1.0",
    "normalize.css": "^4.2.0",
    "postcss-font-magician": "^1.4.0",
    "postcss-import": "^8.1.2",
    "poststylus": "^0.2.3",
    "react-hot-loader": "^3.0.0-beta.3",
    "rucksack-css": "^0.8.6",
    "style-loader": "^0.13.1",
    "stylelint-config-standard": "^13.0.0",
    "stylus-loader": "^2.3.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.2",
    "webpack-dashboard": "^0.1.8",
    "webpack-dev-server": "^1.15.1"
  }
}
