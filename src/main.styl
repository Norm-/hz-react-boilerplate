
$border = .1rem solid black

html
  font-size: 12px

body
  background-color: color(white blackness(10%))
  /*lost-waffle: 2/3 6*/
  font-family: "Abel"
  font-size: 1.42rem
  height: auto

  h3
    color: black
    font-family: "Ubuntu"
    font-range: 10rem 20rem
    margin: 3rem auto
    text-align: center
    /*lost-column: 1/3 1*/
    font-size: responsive 3rem 6rem

    +tablet()
      color: red

#inputContainer
  display: flex

  input
    border: .15rem solid #ddd
    flex: 1
    line-height: 2rem
    margin: .5rem .15rem .25rem 0
    outline: 0
    /*margin: .3rem*/
    padding: .25rem 0 .25rem .25rem
    transition: all .3s ease-in-out

    &::placeholder
      letter-spacing: .1rem

    &:focus
      border: .15rem solid rgba(81, 203, 238, 1)
      box-shadow: 0 0 .5rem rgba(81, 203, 238, 1)
      margin: .5rem .15rem .25rem 0
      padding: .25rem 0 .25rem .25rem

#app
  color: white
  display: flex
  flex-direction: column
  justify-content: flex-start
  /*lost-column: 2/3 4*/
  border: $border
  margin: 2rem 5rem

.messageList
  display: flex
  margin: 0 1rem
  /*flex-direction: row-reverse*/
  justify-content: flex-end
  flex-flow: row-reverse wrap-reverse

  +tablet()
    flex-direction: row
    justify-content: flex-start

.messageItem
  background-color: alpha(green, .3)
  border: $border
  color: black
  display: flex
  flex-direction: column
  margin: .5rem
  padding: .5rem

  span
    margin: .3rem 0

  img
    display: inherit
